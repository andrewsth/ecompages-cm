<style type="text/css">
  
  body{background: #FFF;color:#333;
    font: 76% Arial,sans-serif}
  
  ul#split,ul#split li{margin:0;padding:0;list-style:none}
  ul#split li{width:700px;margin:0 10px 10px 0}
  ul#split h3{font: bold 120%/1.3 Arial,sans-serif;margin:0px;padding:5px 0 0;text-align:center;color: #000}
  ul#split p{margin:0;padding:5px 8px 15px}
  li#one h3{background: #CDEB8B}
  ul#split div{background: #FFC}
  li#one div{border:2px solid #CDEB8B; padding: 0px}
  li#two h3{background: #FFBD00}
  li#two div{border:2px solid #FFBD00;padding: 5px}
  li#three h3{background: #E3A1C4}
  li#three div{border:2px solid #E3A1C4;padding: 5px}
  li#four h3{background: #C8C866}
  li#four div{border:2px solid #C8C866;padding: 5px}
  </style>


<h2>Order Manager</h2>
<hr />

<br/>
<ul id="split">
  
  <li id="four"><h3>Summary</h3>
    <div>
	There are total <%= @orders.size %> order(s) in our database <br/>
	Number of new orders: <strong><%= Order.number_of_orders("New") %></strong>
       </div>
       </li>
     </ul>

<ul id="split">
  
  <li id="one"><h3>Listing Orders</h3>
    <div>
	
	<p>(<%= image_tag("/images/edit.gif") %> View/Edit Order | <%= image_tag("/images/delete.gif") %> Delete Order)</p>
<table class="nice_table">
	<tr>
		<th>ID</th>
		<th>Customer</th>
		<th>Status</th>
		<th>Note</th>
		<th>Operations</th>
	</tr>	
	
<% for odr in @orders %>
	<tr>
		<td><%= link_to odr.id, :action => 'order',:controller=>'admin',:id=>odr %></td>
		<td><%=h odr.customer.contact_name %></td>
		<td><%=h odr.status %></td>
		<td><%=h truncate(odr.note,60) %></td>
		<td><%= link_to image_tag("/images/edit.gif"), :action => 'order',:controller=>'admin',:id=>odr %> | 
			<%= link_to image_tag("/images/delete.gif"), { :action => 'destroy_order', :id => odr }, :confirm => 'Are you sure?', :method => :post %>
			</td>
	</tr>
<% end %>
</table>
       </div>
       </li>
     </ul>
<br/>
<script type="text/javascript">
  
  Nifty("ul#split h3","top");
  Nifty("ul#split div","none");
  
  </script>

<br/>
