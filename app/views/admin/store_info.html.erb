
<h2>Business Info</h2>
<hr/>

<br/>

<% form_tag(:action=>'store_info') do%>
<table border="0">
  
  <tbody>
    <tr>
      <td>Store Name</td>
      <td><%=text_field("store","shop_name" ,"value"=>@store.shop_name)%></td>
    </tr>
    <tr>
      <td>Administrator Email</td>
      <td><%=text_field("store","admin_email","value"=>@store.admin_email)%></td>
    </tr>
    <tr>
      <td>Company Name</td>
      <td><%=text_field("store","company_name","value"=>@store.company_name)%></td>
    </tr>
    <tr>
      <td>Business Address</td>
      <td><%=text_area("store","b_addr", "cols"=>45, "rows"=>4,"value"=>@store.b_addr)%></td>
    </tr>
    <tr>
      <td>Business Phone</td>
      <td><%=text_field("store","b_phone","value"=>@store.b_phone)%></td>
    </tr>
    <tr>
      <td>Business Mobile Phone</td>
      <td><%=text_field("store","b_mobile","value"=>@store.b_mobile)%></td>
    </tr>
    <tr>
      <td>Business Bank Account for Customer Payment</td>
      <td><%=text_field("store","b_bank_acct","value"=>@store.b_bank_acct)%></td>
    </tr>
    <tr>
      <td>Store Domain Name (e.g., http://www.myshop.com)</td>
      <td><%=text_field("store","b_website","value"=>@store.b_website)%></td>
    </tr>
  </tbody>
</table>

  <%=submit_tag("Save")%>
<% end %>

