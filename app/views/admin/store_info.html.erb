<table border="0">
    <tr>
      <td>Application directory</td>
      <td><%=text_field("app","install_dir_name","size"=>8, "value"=>@store.install_dir_name) %></td>
    </tr>
    <tr>
  </table>
<%=submit_tag("Save")%>
<% end %>

                
