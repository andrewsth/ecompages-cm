<h2>Listing Condition Labels</h2>
<hr />

<br/>

<p>
<%= image_tag("/images/add.gif") %> <%= link_to 'Add new Condition Label', :action => 'new' %>
</p>
<table class="nice_table">
  <tr>
  	<th>Condition Labels</th>
	<th>Admin</th>
  </tr>
  
<% for productcondition in @productconditions %>
  <tr>
    <td><%=h productcondition.condition %></td>
    
    <td><%= link_to 'Edit', :action => 'edit', :id => productcondition %> 
    <%= link_to(image_tag("/images/trash.gif"), { :action => 'destroy', :id => productcondition }, :confirm => 'Are you sure?', :method => :post) %></td>
  </tr>
<% end %>
</table>

